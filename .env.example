# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mrcap_dashboard
POSTGRES_USER=mrcap_user
POSTGRES_PASSWORD=your_password_here

# Database URL (convenience variable - not used by backend code directly)
# Some tools may use this, but the backend uses individual variables above
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Firebase Admin SDK Configuration
# Download your Firebase Service Account JSON from:
# https://console.firebase.google.com/ → Project Settings → Service Accounts
# Then place the file in the backend directory and set the path below
FIREBASE_CREDENTIALS_PATH=./firebase-service-account.json

# Development Mode (⚠️ DO NOT USE IN PRODUCTION)
# Set to true to bypass Firebase auth for local testing
# DEV_MODE=false
# DEV_USER_ID=1
